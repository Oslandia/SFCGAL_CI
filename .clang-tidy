Checks: '-*,clang-analyzer-*,cert-*,bugprone-*,-bugprone-easily-swappable-parameters,modernize-*,performance-*,portability-*,readability-*,-readability-magic-numbers,-header-filter=.*'
CheckOptions:
  - key: bugprone-argument-comment.StrictMode
    value: 1
  - key:   readability-identifier-length.IgnoredVariableNames
    value: 'x|y|z|m'
  - key:   readability-identifier-length.IgnoredLoopCounterNames
    value: 'i|j|k|x|y|z|m'
FormatStyle: 'file'
HeaderFileExtensions:         ['', 'h','hpp']
ImplementationFileExtensions: ['c','cpp']
